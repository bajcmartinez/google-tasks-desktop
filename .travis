node_js:
  - "node"
  - "lts/*"

cache:
  directories:
    - node_modules

before_deploy:
  - git config --local user.name "Juan Cruz Martinez"
  - git config --local user.email "bajcmartinez@gmail.com"
  - newVersion=$(git describe --abbrev=0)
  - git tag $newVersion

jobs:
  include:
    - stage: Test
      script:
        - npm test
    - stage: Deploy Windows & Mac
      if: tag IS present
      os: osx
      osx_image: xcode10.1
      script:
        - npm run release -- --mac --win
      before_cache:
        - rm -rf $HOME/.cache/electron-builder/wine
    - stage: Deploy linux
      if: tag IS present
      os: linux
      dist: trusty
      script:
        - npm run release