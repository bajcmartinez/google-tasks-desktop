{
  "extends": ["airbnb-typescript", "airbnb/hooks", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error", {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "parser": "typescript",
        "semi": true,
        "jsxBracketSameLine": false
      }
    ],
    "react/prop-types": "off",
    "no-underscore-dangle": [
      "error", {
        "allowAfterThis": true
      }
    ],
    "no-console": [
      "error", {
        "allow": ["error"]
      }
    ]
  }
}